@{
    ViewData["Title"] = "Home Page";
}

<style>
    .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
    }

    .lead {
        font-size: 1.25em;
        margin-bottom: 20px;
    }

    .btn {
        width: 200px;
    }
</style>

@if(Context.Session.GetString("Role") == null)
{
    <div class="container text-center">
        <h1 class="display-4">Claims Management System</h1>
        <p class="lead">Welcome to the Claims Management System! This application simplifies the process of submitting, approving, and tracking claims for lecturers. Our goal is to enhance efficiency with a user-friendly interface.</p>

        <div class="mt-4">
            <h1 class="display-4">Please Login/Register to continue</h1>
            <a class="btn btn-primary btn-lg m-2" href="/Auth/Login">Login</a>
            <a class="btn btn-secondary btn-lg m-2" href="/Auth/Register">Register</a>
        </div>
    </div>
}
else
{
    <div class="container text-center">
        <h1 class="display-4">Claims Management System</h1>
        <p class="lead">Welcome to the Claims Management System! This application simplifies the process of submitting, approving, and tracking claims for lecturers. Our goal is to enhance efficiency with a user-friendly interface.</p>

    </div>
}


