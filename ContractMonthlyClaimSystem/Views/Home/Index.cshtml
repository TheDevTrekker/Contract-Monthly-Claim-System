@{
    ViewData["Title"] = "Home Page";
}

<style>
    .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
    }

    .lead {
        font-size: 1.25em;
        margin-bottom: 20px;
    }

    .btn {
        width: 200px;
    }
</style>

<div class="container text-center">
    <h1 class="display-4">Claims Management System</h1>
