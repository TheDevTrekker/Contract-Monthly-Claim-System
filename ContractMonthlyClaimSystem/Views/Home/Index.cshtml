@{
    ViewData["Title"] = "Home Page";
}

<style>
    .hero-section {
        background-color: #ffeb3b;
        color: black;
        text-align: center;
        padding: 30px 20px;
        border-radius: 0 0 50% 50% / 0 0 10% 10%;
        position: relative;
        width: 100vw; /* Make sure it takes full viewport width */
        left: 50%; /* Center it horizontally */
        right: 50%; /* Center it horizontally */
        margin-left: -50vw; /* Pull it back half of the viewport width */
        margin-right: -50vw; /* Pull it back half of the viewport width */
    }

        .hero-section h1 {
            font-size: 3rem;
            font-weight: bold;
        }

        .hero-section p {
            font-size: 1.2rem;
            max-width: 600px;
            margin: 0 auto;
        }


    /* Section for features */
    .features-section {
        background-color: #ffffff;
        text-align: center;
        padding: 0px 0px;
    }

        .features-section h2 {
            font-size: 2rem;
            margin-bottom: 30px;
        }

    .feature-item {
        display: inline-block;
        width: 30%;
        vertical-align: top;
    }

        .feature-item img {
            width: 300px;
            margin-bottom: 10px;
        }

        .feature-item h3 {
            font-size: 1.4rem;
            font-weight: bold;
            margin-bottom: 15px;
        }

        .feature-item p {
            margin-top: -10px;
            font-size: 1rem;
            color: #666;
        }

        .btn-white{
            margin-top: 30px !important;       
            color: black !important;
            border-color: black !important;
            font-size: 18px !important;
            font-weight: 600 !important;
            border-radius: 30px !important;
            width: 10% !important;
        }

            .btn-white:hover {
                color: white !important;
                background-color: black !important;
                border-color: black !important;
            }

</style>

@if (Context.Session.GetString("Role") == null)
{
    <div class="hero-section">
        <h1>Contract Monthly Claim System</h1>
        <p>Effortlessly manage and track your claims with our streamlined platform. Connect with coordinators and managers for faster approvals.</p>
        <a href="/Auth/Register" class="btn btn-white" style="margin-bottom:50px;">Sign up</a>
        <br>
        <a href="/Home/LecturerAcc" class="btn btn-white" style="margin-top: -50px !important;">Lecturer</a>
        <a href="/Home/CoordinatorAcc" class="btn btn-white" style="margin-top: -50px !important;">Coordinator</a>
        <a href="/Home/ManagerAcc" class="btn btn-white" style="margin-top: -50px !important;">Manager</a>
    </div>

    <div class="features-section">
        <div class="feature-item">
            <img src="/images/Growth.png" alt="Growth">
            <h3>Streamlined Submissions</h3>
            <p>Submit your claims in just a few clicks and get real-time feedback on your claim status.</p>
        </div>
        <div class="feature-item">
            <img src="/images/Carreer.png" alt="Career">
            <h3>Approval Tracking</h3>
            <p>Easily track claim approvals from coordinators and managers, ensuring a smooth process.</p>
        </div>
        <div class="feature-item">
            <img src="/images/Insight.png" alt="Insight">
            <h3>Insightful Reports</h3>
            <p>Gain insights into your claim history and performance, helping you stay organized.</p>
        </div>
    </div>
}
else
{
    <div class="hero-section">

        <h1>Welcome Back, @Context.Session.GetString("Name")!</h1>
        <p>Your role: @Context.Session.GetString("Role")</p>
        <br>
        
        
        <div>
                @if (Context.Session.GetString("Role") == "Lecturer")
                {
                <h2 style="margin-bottom: -20px;">What would you like to do?</h2>
                <a class="btn btn-white btn-lg m-2" href="/Lecturer/SubmitClaims">Submit a Claim</a>
                <a class="btn btn-white btn-lg m-2" href="/Lecturer/Report">Track My Claims</a>
                }
                else if (Context.Session.GetString("Role") == "Coordinator")
                {
                <h2>What would you like to do?</h2>
                <a class="btn btn-white btn-lg m-2" href="/Coordinator/CoReview">Pending Approvals</a>
                <a class="btn btn-white btn-lg m-2" href="/Coordinator/CoReport">Track All Claims</a>
                }
                else if (Context.Session.GetString("Role") == "Manager")
                {
                <h2>What would you like to do?</h2>
                <a class="btn btn-white btn-lg m-2" href="/Manager/ManagerReview">Claims Overview</a>
                <a class="btn btn-white btn-lg m-2" href="/Manager/ManagerReport">Track All Claims</a>
                }
        </div>
    </div>

    <div class="features-section">
        <p style="margin-top: 50px; margin-bottom: -20px;">Let us know if you have any queries, ideas, or concers. We are here to assist you.</p>
        <div class="feature-item">
            <img src="/images/Feedback.png" alt="Review">
            <h3>Review</h3>
            <p>Please feel free to leave a review on our services.</p>
        </div>
        <div class="feature-item">
            <img src="/images/Email.png" alt="Career">
            <h3>Contact us</h3>
            <p><strong>Email:</strong> <a href="mailto:st10268524@vcconnect.edu.za">st10268524@vcconnect.edu.za</a></p>
            
        </div>
    </div>
  
}


