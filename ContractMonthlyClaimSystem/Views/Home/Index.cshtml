    <div class="mt-4">
        <a class="btn btn-primary btn-lg m-2" href="/Home/SubmitClaim">Submit a Claim</a>
        <a class="btn btn-secondary btn-lg m-2" href="/Home/ManageClaims">Approve or Reject Claims</a>
        <a class="btn btn-success btn-lg m-2" href="/Home/TrackClaims">Track Claim Status</a>
    </div>
</div>


