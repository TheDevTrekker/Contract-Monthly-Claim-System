@model ContractMonthlyClaimSystem.Models.CoReportViewModel
@{
    ViewData["Title"] = "CoReport";
}
<h3>Claims Approved by Coordinator</h3>
@if (Model.ApprovedClaims.Any())
{
    <table class="table table-bordered table-striped">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Submission Date</th>
                <th>Lecturer Name</th>
                <th>Hours Worked</th>
                <th>Hourly Rate</th>
                <th>Total Price</th>
                <th>Status</th>
                <th>File</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in Model.ApprovedClaims)
            {
                <tr>
                    <td>@claim.Id</td>
                    <td>@claim.SubmissionDate.ToString("MM/dd/yyyy")</td>
                    <td>@claim.LecturerName</td>
                    <td>@claim.HoursWorked</td>
                    <td>@claim.HourlyRate</td>
                    <td>R @(claim.HoursWorked * claim.HourlyRate)</td>
                    <td>@claim.Status</td>
                    <td>
                        @if (!string.IsNullOrEmpty(claim.SupportingDocumentPath))
                        {
                            var filePathParts = claim.SupportingDocumentPath.Split('/');
                            var fileName = filePathParts[filePathParts.Length - 1];
                            <a href="@Url.Content(claim.SupportingDocumentPath)" target="_blank">@fileName</a>
                        }
                        else
                        {
                            <span>No file</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No claims approved by the coordinator yet.</p>
}

