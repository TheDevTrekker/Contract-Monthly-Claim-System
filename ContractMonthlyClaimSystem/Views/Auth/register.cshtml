@model ContractMonthlyClaimSystem.Models.Register
@{
    ViewData["Title"] = "Register";
}
<style>
    /* Flexbox container to center the register form */
    .register-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: 50px;
        background-color: #ffffff; 
    }

    /* General styling for register form */
    .register-container {
        width: 600px;
        padding: 20px;
        background-color: #ffffff;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .register-header {
        font-family: 'Times New Roman', Times, serif;
        font-size: 40px;
        font-weight: 700;
        color: #343a40;
        text-align: center;
        margin-bottom: 20px;
    }

    .form-floating label {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #6c757d;
    }

    .form-control {
        border-radius: 30px;
        padding: 15px;
        font-size: 18px;
        color: #343a40;
        background-color: #f0f0f0;
        border: none;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            background-color: #ffffff;
            border-color: #343a40;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.3);
        }


    .login-links {
        text-align: center;
        margin-top: 15px;
    }

        .login-links a {
            color: black;
            text-decoration: none;
        }

            .login-links a:hover {
                text-decoration: underline;
                color: dodgerblue;
            }
</style>

<div class="register-wrapper">
    <div class="register-container">


        <form method="post" asp-page-handler="Register">
            <h3 class="text-black">Register</h3>
            <p class="text-black">Create an account.</p>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="FullName" class="form-control" autocomplete="FullName" placeholder="Full Name" />
                <label asp-for="FullName">Full Name</label>
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control" autocomplete="username" placeholder="name@example.com" />
                <label asp-for="Email">Email</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Password" type="password" class="form-control" autocomplete="new-password" placeholder="Password" />
                <label asp-for="Password">Password</label>
                <small class="text-muted">At least 6 characters.</small>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="ConfirmPassword" type="password" class="form-control" autocomplete="new-password" placeholder="Confirm Password" />
                <label asp-for="ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <select asp-for="Role" class="form-select" aria-label="Select Role">
                    <option value="">Select Role</option>
                    <option value="Lecturer">Lecturer</option>
                    <option value="Coordinator">Programme Coordinator</option>
                    <option value="Manager">Academic Manager</option>
                </select>
                <label asp-for="Role">Role</label>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-blue" style="color: dodgerblue;">Register</button>
        </form>

        <div class="login-links text-black">
            <p><a href="/Auth/Login">Already have an account? Login</a></p>
        </div>

        <hr />
    </div>
</div>

