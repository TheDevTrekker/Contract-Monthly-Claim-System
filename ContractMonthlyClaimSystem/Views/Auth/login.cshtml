@model ContractMonthlyClaimSystem.Models.Login
@{
    ViewData["Title"] = "Login";
}
<style>
    /* Flexbox container to center the login form */
    .login-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: 100px;
        background-color: #ffffff;
    }

    /* General styling for login form */
    .login-container {
        width: 600px;
        padding: 20px;
        background-color: #ffffff;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .login-header {
        font-family: 'Times New Roman', Times, serif;
        font-size: 40px;
        font-weight: 700;
        color: #343a40;
        text-align: center;
        margin-bottom: 20px;
    }

    .form-floating label {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #6c757d;
    }

    .form-control {
        border-radius: 30px;
        padding: 15px;
        font-size: 18px;
        color: #343a40;
        background-color: #f0f0f0;
        border: none;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            background-color: #ffffff;
            border-color: #343a40;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.3);
        }


    .login-links {
        text-align: center;
        margin-top: 15px;
    }

        .login-links a {
            color: #343a40;
            text-decoration: none;
        }

            .login-links a:hover {
                text-decoration: underline;
                color: dodgerblue;
            }

    .fade {
        opacity: 0;
        transition: opacity 1s ease-out;
    }

</style>

<div class="login-wrapper">
    <div class="login-container">
        <form method="post" asp-page-handler="Login">
            <h3 class="text-black">Login to access your account.</h3>
            <p class="text-black">Enter your credentials.</p>
            <hr />

            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control" autocomplete="username" placeholder="name@example.com" />
                <label asp-for="Email">Email</label>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Password" type="password" class="form-control" autocomplete="new-password" placeholder="password" />
                <label asp-for="Password">Password</label>
            </div>

            <button type="submit" class="btn btn-blue">Login</button>
        </form>

        <div class="login-links text-black">
            <p><a href="/Auth/Register">New to the System? Register</a></p>
        </div>
    </div>
</div>