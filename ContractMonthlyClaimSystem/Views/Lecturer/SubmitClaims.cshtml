@using System.IO
@model ContractMonthlyClaimSystem.Models.LecturerViewModel
@{
    ViewData["Title"] = "SubmitClaims";
}
<style>
    .btn-submit {
        color: white !important;
        background-color: green !important;
        border-color: green !important;
        font-size: 18px !important;
        font-weight: 600 !important;
        border-radius: 30px !important;
        transition: background-color 0.3s ease, transform 0.3s ease !important;
        margin-top: 20px;
    }

        .btn-submit:hover {
            color: white !important;
            background-color: #004d00 !important;
            border-color: #004d00 !important;
            transform: scale(1.05) !important;
        }

</style>

<h2>Submit Claim</h2>
<form asp-action="SubmitClaimPost" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="NewClaim.HoursWorked" class="control-label"></label>
        <input asp-for="NewClaim.HoursWorked" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="NewClaim.HoursWorked" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewClaim.HourlyRate" class="control-label"></label>
        <input asp-for="NewClaim.HourlyRate" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="NewClaim.HourlyRate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewClaim.Notes" class="control-label"></label>
        <textarea asp-for="NewClaim.Notes" class="form-control"></textarea>
        <span asp-validation-for="NewClaim.Notes" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewClaim.SupportingDocument" class="control-label"></label>
        <input type="file" asp-for="NewClaim.SupportingDocument" class="form-control" />
        <span asp-validation-for="NewClaim.SupportingDocument" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-submit" />
    </div>
</form>

<hr />

<h3>Submitted Claims</h3>
@if (Model.SubmittedClaims != null && Model.SubmittedClaims.Count > 0)
{
    <table class="table table-striped table-bordered mt-4">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Submission Date</th>
                <th>Hours Worked</th>
                <th>Hourly Rate</th>
                <th>Total Price</th>
                <th>Notes</th>
                <th>Status</th>
                <th>File</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in Model.SubmittedClaims)
            {
                <tr>
                    <td>@claim.Id</td>
                    <td>@claim.SubmissionDate.ToString("MM/dd/yyyy")</td>
                    <td>@claim.HoursWorked</td>
                    <td>@claim.HourlyRate</td>
                    <td>R @(claim.HoursWorked*claim.HourlyRate)</td>
                    <td>@claim.Notes</td>
                    <td>@claim.Status</td>
                    <td>
                        @if (!string.IsNullOrEmpty(claim.SupportingDocumentPath))
                        {
                            var filePathParts = claim.SupportingDocumentPath.Split('/');
                            var fileName = filePathParts[^1];
                            <a href="@Url.Content(claim.SupportingDocumentPath)" target="_blank">@fileName</a>
                        }
                        else
                        {
                            <span>No file</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No claims submitted yet.</p>
}


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}